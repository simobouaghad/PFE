{{ form_start(form) }}
<div style="box-shadow: 0 2px 4px rgb(0 0 0 / 10%), 0 8px 16px rgb(0 0 0 / 10%); border-radius: 10px; border: 1px solid #dddfe2;; margin: 0 auto; padding: 20px; width: 96%;">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Entrer le nom :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.nom, {'attr': {'class':'form-control', 'placeholder': 'Entrer le nom'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Entrer le prènom :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.prenom, {'attr': {'class':'form-control', 'placeholder': 'Entre le prénom'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Choisir le sexe :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.sexe, {'attr': {'class':'form-control', 'placeholder': 'Choisir le sexe'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>CIN :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.CIN, {'attr': {'class':'form-control', 'placeholder': 'Entre CIN de Carte nationale'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Numéro de téléphone :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.telephone, {'attr': {'class':'form-control', 'placeholder': 'Entrer le numéro de téléphone'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Adresse :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.adresse, {'attr': {'class':'form-control', 'placeholder': 'Entrer addrese'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Email :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.email, {'attr': {'class':'form-control', 'placeholder': 'Entre l\'adresse email'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Image :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.image, {'attr': {'class':'form-control', 'placeholder': 'image'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Centre :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.centre, {'attr': {'class':'form-control', 'placeholder': 'Choisir le centre'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Salaire :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.salary, {'attr': {'class':'form-control', 'placeholder': 'donner la valeur de salaire'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Password :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.password, {'attr': {'class':'form-control', 'placeholder': 'Entrer le mot de passe'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Planning :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.planning, {'attr': {'class':'form-control', 'placeholder': 'planning de travail'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right">
		<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }} <i class="icon-paperplane ml-2"></i></button>
	</div>

</div>

{{ form_end(form) }}

    {% if is_granted('ROLE_DIRECTEUR') %}
        <option id="centreID" style="display: none;">{{app.user.centre.id}}</option>
        <option id="centreName" style="display: none;">{{app.user.centre.name}}</option>
        <script>
            $('#professeur_centre option')
                .remove();
            $('#professeur_centre')
                .append('<option value=""></option>')
            $('#professeur_centre')
                .append('<option value="'+$('#centreID').val()+'">'+$('#centreName').val()+'</option>')
        </script>
    {% endif %}

