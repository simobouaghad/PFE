{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
    <div class="edit-head" style="width: 96%; margin: 0 auto; display: flex; align-items: center;">
        <h1 style="color: #3378F1; font: 600; width: 96%; font-weight: 600;">Page du Professeur</h1>
        <div style="display: flex; align-items: center; justify-content: space-between; width: 15%;">
            <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}"><i class="icon-pencil7" style="font-size: 25px; color: #4caf50;"></i></a>
            {{ include('professeur/_delete_form.html.twig') }}
        </div>
    </div>

    

    <table class="table" style="margin: 0 auto; width: 80%; text-align: center;">
        <div style="width: 100%; display: flex; justify-content: center;">
            <img style="width: 150px; border-radius: 50%; margin-bottom: 10px;" src={{ asset('uploads/images/' ~ professeur.image) }}>
        </div>
        <tbody style="border: 1px solid #dddfe2;">
            <tr>
                <th>Nom</th>
                <td>{{ professeur.nom }}</td>
            </tr>
            <tr>
                <th>Pr√®nom</th>
                <td>{{ professeur.prenom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ professeur.sexe }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ professeur.CIN }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ professeur.telephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ professeur.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ professeur.email }}</td>
            </tr>
            
            <tr>
                <th>Centre</th>
                <td>{{ professeur.centre }}</td>
            </tr>

            <tr>
                <th>Salaire</th>
                <td>{{ professeur.salary }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
