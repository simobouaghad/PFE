    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>MÃ©thode :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.methode, {'attr': {'class':'form-control', 'placeholder': 'Entrer le nom de ville'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Centre :</label>
                <div class="form-group row">
