{{ form_start(form) }}
<div style="box-shadow: 0 2px 4px rgb(0 0 0 / 10%), 0 8px 16px rgb(0 0 0 / 10%); border-radius: 10px; border: 1px solid #dddfe2;; margin: 0 auto; padding: 20px; width: 96%;">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Nom :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.name, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Prix :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.prix, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>From :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.from_, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>To :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.to_, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Payer par :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.methodepay, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Status :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.status, {'attr': {'class':'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right">
		<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }} <i class="icon-paperplane ml-2"></i></button>
	</div>
</div>
{{ form_end(form) }}
