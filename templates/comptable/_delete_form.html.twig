<form method="post" action="{{ path('app_comptable_delete', {'id': comptable.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comptable.id) }}">
    <button class="btn" style="background-color: red; color: #fff;">Delete <i class="icon-bin ml-2"></i></button>
</form>
