{{ form_start(form) }}
<div style="box-shadow: 0 2px 4px rgb(0 0 0 / 10%), 0 8px 16px rgb(0 0 0 / 10%); border-radius: 10px; border: 1px solid #dddfe2;; margin: 0 auto; padding: 20px; width: 96%;">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Nom :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.name, {'attr': {'class':'form-control', 'placeholder': 'Entrer un nom pour le centre'}}) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label>Location :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.location, {'attr': {'class':'form-control', 'placeholder': 'Entrer la location du centre'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Ville :</label>
                <div class="form-group row">
                    <div class="col-lg-12">
                        {{ form_widget(form.ville, {'attr': {'class':'form-control', 'placeholder': 'Choisir la ville'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-right">
		<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }} <i class="icon-paperplane ml-2"></i></button>
	</div>

</div>



{{ form_end(form) }}
