{% extends 'base.html.twig' %}

{% block title %}Methdepay index{% endblock %}

{% block body %}
<div class="index" style='box-shadow: 0 2px 4px rgb(0 0 0 / 10%), 0 8px 16px rgb(0 0 0 / 10%); border-radius: 10px; border: 1px solid #dddfe2; padding: 15px;'>
    <div class="head-index" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; padding: 10px">
        <h1 style="color: #3378F1; font-weight: 600;">MÃ©thodes de paiement</h1>
        <a href="{{ path('app_methdepay_new') }}"><i class="icon-plus-circle2" style="font-size: 30px; color: #4caf50;"></i></a>
    </div>

    <table id="example" class="display" style="width:100%">
        <thead>
            <tr style="color: #3378F1; font-size: 14px; text-align: center;">
                <th>Id</th>
                <th>Methode</th>
                <th>Centre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for methdepay in methdepays %}
            <tr style="text-align: center;">
                <td>{{ methdepay.id }}</td>
                <td>{{ methdepay.methode }}</td>
                <td>{{ methdepay.centre }}</td>
                <td class="action" style="width: 40%;">
                    <a href="{{ path('app_methdepay_edit', {'id': methdepay.id}) }}"><i class="icon-pencil7"></i></a>
                    {{ include('methdepay/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
